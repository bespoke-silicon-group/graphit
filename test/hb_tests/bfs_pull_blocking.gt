element Vertex end
element Edge end

const edges : edgeset{Edge}(Vertex,Vertex) = load (argv[1]);

const vertices : vertexset{Vertex} = edges.getVertices();

const parent : vector{Vertex}(int) = -1;
% const parent : vector{Vertex}(Vertex) = -1;


func updateEdge(src : Vertex, dst : Vertex)
    parent[dst] = src;
end

func toFilter(v : Vertex) -> output : bool
    output =  parent[v] == -1;
end

func main()

    var frontier : vertexset{Vertex} = new vertexset{Vertex}(0);
    frontier.addVertex(8);
    parent[8] = 8;

    while (frontier.getVertexSetSize() != 0)
         #s1# frontier = edges.from(frontier).to(toFilter).applyModified(updateEdge, parent, true);
         delete frontier;
    end
    delete frontier;

end

schedule:
    SimpleHBSchedule s1;
    s1.configLoadBalance(BLOCKING);
    s1.configDirection(hb_schedule_options::PULL);
    program->applyHBSchedule("s1", s1);
